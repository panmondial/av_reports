<% provide(:title, @user.first_name) %>
  
  <h1>User Profile</h1>
  
  <div class="row">
    <div class="span9 offset1">
	  <div class="lead"><%= @user.first_name %> <%= @user.last_name %></div>
	
      <table class="table">
        <tr>
	      <td><strong>FamilySearch Username:</strong></td>
	      <td><%= @user.username %></td>
	    </tr>
		<tr>
	      <td><strong>Email:</strong></td>
          <td><%= @user.email %></td>
	    </tr>
	    <tr>
	      <td><strong>Address Line 1:</strong></td>
	      <td><%= @user.address1 %></td>
	    </tr>
	    <tr>
	      <td><strong>Address Line 2:</strong></td>
	      <td><%= @user.address2 %></td>
	    </tr>
	    <tr>
	      <td><strong>City:</strong></td>
	      <td><%= @user.city %></td>
	    </tr>
	    <tr>
	      <td><strong>State/Province:</strong></td>
	      <td><%= @user.state_province %></td>
	    </tr>
	    <tr>
	      <td><strong>Country:</strong></td>
	      <td><%= @user.country %></td>
	    </tr>
	    <tr>
	      <td><strong>ZIP/Postal Code:</strong></td>
	      <td><%= @user.zip_postalcode %></td>
	    </tr>
	    <tr>
	      <td><strong>Telephone:</strong></td>
	      <td><%= @user.phone %></td>
	    </tr>
      </table>
	  <%= link_to "Edit Account", edit_user_path(current_user), class: "btn btn-primary" %>
    </div>
  </div>