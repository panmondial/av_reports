<% provide(:title, 'Reset Password') %>
<h1>Reset Password</h1>

<div class="row">
  <div class="span9 offset2">
    <p>Enter your new password and click the button below to change your password.</p>
    <br>
    
	<%= form_for(@user, :url => password_reset_path(params[:id]), :html => { :class => "form-horizontal" }) do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>
      <div class="control-group">
        <%= f.label :password, "Password*", :class => "control-label" %>
        <div class="controls">
	      <%= f.password_field :password, class: "input-large", placeholder: "Enter New Password" %>
		  <span class="help-inline">8 character minimum</span>
        </div>
	  </div>
      <div class="control-group">
        <%= f.label :password_confirmation, "Password Confirmation*", class: "control-label" %>
	    <div class="controls">
          <%= f.password_field :password_confirmation, class: "input-large", placeholder: "Enter New Password" %>
        </div>
      </div>
      <div class="control-group">
	    <div class="controls">
	      <%= f.submit "Update Password", class: "btn btn-large btn-primary" %>
	    </div>
	  </div>
    <% end %>
  </div>
</div>
