<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
		  <%= link_to "Arbor Vitae Software", root_path, class: "brand" %>
		  <ul class="nav">
			<li><%= link_to "Home",    root_path %></li>
			<li class="divider-vertical"></li>
			<li><%= link_to "Reports", reports_path %></li>
			<li class="divider-vertical"></li>
			<li><%= link_to "About",   about_path %></li>
			<li class="divider-vertical"></li>
			<li><%= link_to "Contact", contact_path %></li>
		  </ul>
		      
		  </ul>
		  
		  <% if signed_in? %>
			<ul class="nav pull-right">
			  <li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown" title="click for options">
				  Welcome <%= current_user.first_name + " " + current_user.last_name %> <b class="caret"></b></a>
				<ul class="dropdown-menu">
				  <li><%= link_to "View Account", current_user %></li>
				  <li><%= link_to "Edit Account", edit_user_path(current_user) %></li>
				  <li><%= link_to "Help", help_path %></li>
				  <li class="divider"></li>
				  <li>
					<%= link_to "Sign out", signout_path, method: "delete" %>
				  </li>
				</ul>
			  </li>
			</ul>
          <% else %>
		    <ul class="nav pull-right">
			  <li><%= link_to "Sign in", '/auth/familysearch_identity' %></li>
			</ul>
          <% end %>
		</div>
	</div>
</header>
