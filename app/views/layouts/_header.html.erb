<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
		  <%= link_to image_tag('arbor_vitae_header_small.gif'), root_path, class: "brand", title: "Arbor Vitae Home" %>
		  <ul class="nav">
			<li><%= link_to "Home",    root_path %></li>
			<li class="divider-vertical"></li>
			<li><%= link_to "Reports", reports_path %></li>
			<li class="divider-vertical"></li>
			<li><%= link_to "About",   about_path %></li>
			<li class="divider-vertical"></li>
			<li><%= link_to "Contact", contact_path %></li>
		  </ul>
		      
		  </ul>
		  
		  <% if signed_in? %>
			<ul class="nav pull-right">
			  <li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown" title="click for options">
				<i class="icon-user"></i> 
				<%= current_user.first_name + " " + current_user.last_name %> <b class="caret"></b></a>
				<ul class="dropdown-menu">
				  <li><%= link_to '<i class="icon-search"></i> View Profile'.html_safe, current_user %></li>
				  <li><%= link_to '<i class="icon-pencil"></i> Edit Profile'.html_safe, edit_user_path(current_user) %></li>
				  <li><%= link_to '<i class="icon-question-sign"></i> Help'.html_safe, help_path %></li>
				  <li class="divider"></li>
				  <li>
				    <%= link_to '<i class="icon-remove-sign"></i> Sign out'.html_safe, signout_path, method: "delete" %>
				  </li>
				</ul>
			  </li>
			</ul>
          <% else %>
		    <ul class="nav pull-right">
			  <li><%= link_to '<i class="icon-chevron-right"></i> Sign in'.html_safe, '/auth/familysearch_identity' %></li>
			</ul>
          <% end %>
		</div>
	</div>
</header>
